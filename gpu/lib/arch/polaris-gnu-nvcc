INSTALL = ../lib

PYTHON_INC=$(shell python -m pybind11 --includes)

FC = ftn
FCFLAGS = -g -pg -O3

CXX = CC
CXXFLAGS = -g -fPIC -O3
CXXFLAGS += -I$(NVIDIA_PATH)/cuda/include
CXXFLAGS += $(PYTHON_INC)

CXXFLAGS += -D_USE_GPU -D_GPU_CUDA

CUDA_CXXFLAGS = $(PYTHON_INC)
CUDA_CXXFLAGS += -D_USE_GPU -D_GPU_CUDA

LD = $(CXX)
LDFLAGS = -fPIC -shared
LIB = -lstdc++
